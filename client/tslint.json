{
  "extends": ["codelyzer"],
  "rulesDirectory": [
    "./node_modules/codelyzer",
    "./node_modules/tslint-microsoft-contrib"
  ],
  "rules": {
    "no-unused-variable": [true],
    "promise-must-complete": true,
    "max-func-body-length": [
      true,
      {
        "func-body-length": 45,
        "func-expression-body-length": 30,
        "arrow-body-length": 40,
        "method-body-length": 45,
        "ctor-body-length": 40,
        "ignore-comments": true,
        "ignore-parameters-to-function-regex": "(describe)|(beforeEach)"
      }
    ],
    "class-name": true,
    "curly": false,
    "indent": [true, "spaces"],
    "max-line-length": [true, 150],
    "member-ordering": [
      false,
      {
        "order": [
          "static-field",
          "instance-field",
          "static-method",
          "instance-method"
        ]
      }
    ],
    "no-arg": true,
    "no-construct": true,
    "no-duplicate-variable": true,
    "no-empty": true,
    "no-eval": true,
    "no-trailing-whitespace": true,
    "no-unused-expression": true,
    "no-use-before-declare": true,
    "one-line": [true, "check-open-brace", "check-catch", "check-whitespace"],
    "quotemark": [true, "single"],
    "semicolon": [true],
    "trailing-comma": [true],
    "variable-name": false,
    "use-input-property-decorator": false,
    "use-output-property-decorator": false,
    "use-host-property-decorator": true,
    "no-input-rename": true,
    "no-output-rename": true,
    "use-life-cycle-interface": true,
    "use-pipe-transform-interface": true,
    "component-class-suffix": false,
    "directive-class-suffix": false,
    "no-debugger": true,
    "align": [false, "statements"],
    "ban": false,
    "comment-format": [false, "check-space"],
    "eofline": false,
    "forin": false,
    "jsdoc-format": false,
    "label-position": false,
    "member-access": false,
    "no-bitwise": false,
    "no-conditional-assignment": false,
    "no-console": [false, "debug", "info", "time", "timeEnd", "trace"],
    "no-inferrable-types": [true],
    "no-internal-module": false,
    "no-null-keyword": false,
    "no-require-imports": true,
    "no-shadowed-variable": false,
    "no-string-literal": false,
    "no-var-keyword": false,
    "no-var-requires": false,
    "object-literal-sort-keys": false,
    "radix": true,
    "switch-default": false,
    "triple-equals": [true, "allow-null-check"],
    "typedef": [true, "call-signature", "property-declaration"],
    "typedef-whitespace": [
      false,
      {
        "call-signature": "nospace",
        "index-signature": "nospace",
        "parameter": "nospace",
        "property-declaration": "nospace",
        "variable-declaration": "nospace"
      }
    ],
    "whitespace": [
      false,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-separator",
      "check-type"
    ]
  }
}
